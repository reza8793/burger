<h1>Delicious Burgers!</h1>

<h2>Devour them while you can !</h2>

<ul>
  {{#each burgers}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="true">
          <button type="submit">Devour it!</button>
        </form>
      </li>
  {{/each}}
</ul>